<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <defaults public="false" />

        <service id="twig.extension.cssinliner" class="Twig\CssInliner\CssInlinerExtension">
            <tag name="twig.extension" />
        </service>

        <service id="twig.runtime.cssinliner" class="Twig\CssInliner\CssInlinerRuntime">
            <argument type="service" id="twig.cssinliner" />
            <tag name="twig.runtime" />
        </service>

        <service id="twig.cssinliner" class="TijsVerkoyen\CssToInlineStyles\CssToInlineStyles" />
    </services>
</container>
